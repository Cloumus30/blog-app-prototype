<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partial/head') %> 
    <link rel="stylesheet" href="/css/soal_pembahasan.css">
    <title>Soal Latihan</title>
</head>

<body>    
<%- include('partial/header') %> 

    <!-- Blog Start -->
    <div class="blog_main">
    	<div class="container">

            <div class="d-flex justify-content-end mt-4">
                <% if (locals.user !== null) { %>
                    <a href="/insert-soal?idPaket=<%= paket.id %>" class="btn btn-primary"><i class="fas fa-edit"></i> Input Soal</a>    
                <% } %>
            </div>

            <div class="d-flex justify-content-center mt-4">
                <h1><%= paket.nama_paket %> </h1>
            </div>
            
            <% let i=1; soal.forEach(el => { %>
                <br><hr>
                <div id="soal-<%= el.id %>">
                    <h4 class="py-0 my-0">No.<%= i %> 
                        <% if (locals.user !== null) { %>
                            <form id="delete-form" action="/delete-soal/<%= el.id %>" method="post">
                                <a href="/edit-soal/<%= el.id %>"><button type="button" class="btn btn-primary"><i class="fas fa-edit"></i> Edit Soal</button></a>
                                <button type="button" onclick="deleteSoal(this)" data-id-soal="<%= el.id %>" class="btn btn-danger"><i class="fas fa-trash"></i> Hapus Soal</button>
                            </form>    
                        <% } %>
                    </h4>
                    <%- el.dat_soal.soal %>
                    <table>
                        <tr>
                            <td>A.</td>
                            <td><%- el.dat_soal.pilA %></td>
                        </tr>
                        <tr>
                            <td>B.</td>
                            <td><%- el.dat_soal.pilB %></td>
                        </tr>
                        <tr>
                            <td>C.</td>
                            <td><%- el.dat_soal.pilC %></td>
                        </tr>
                        <tr>
                            <td>D.</td>
                            <td><%- el.dat_soal.pilD %></td>
                        </tr>
                        <tr>
                            <td>E.</td>
                            <td><%- el.dat_soal.pilE %></td>
                        </tr>
                    </table>
                    <hr>
                    <button onclick="showPembahasan(this)">Lihat Pembahasan</button>
                    <div class="pembahasan">
                        <h4>Pembahasan: <%- el.dat_soal.pembahasan %> </h4>
                    </div>
                    
                </div>    
                <% i++ }) %>
                <hr>
       	</div>
    </div> 

    <!--blog end -->
    <br><br>
    <%- include('partial/contact')  %> 
    
    <%- include('partial/copyright')  %> 

    <%- include('partial/footer') %> 
    <script src="/js/soal.js"></script>
    <script src="/js/soal_pembahasan.js"></script>
</body>
</html>